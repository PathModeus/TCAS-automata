<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE nta PUBLIC '-//Uppaal Team//DTD Flat System 1.1//EN' 'http://www.it.uu.se/research/group/darts/uppaal/flat-1_2.dtd'>
<nta>
	<declaration>// Place global declarations here.

const int N = 2;
typedef int[0,N-1] id_a;


chan solution[N], emission[N], danger[N],  safe[N];
urgent chan infoVoisin[N];
broadcast chan info[N], conseil[N];
urgent chan manoeuvre[N];</declaration>
	<template>
		<name x="5" y="5">Aircraft</name>
		<parameter>const id_a id</parameter>
		<declaration>clock t;</declaration>
		<location id="id0" x="-76" y="25">
			<name x="-85" y="42">Safe</name>
		</location>
		<location id="id1" x="-76" y="-85">
			<name x="-136" y="-85">Danger</name>
		</location>
		<init ref="id0"/>
		<transition>
			<source ref="id0"/>
			<target ref="id1"/>
			<label kind="synchronisation" x="-153" y="-25">info[id]!</label>
			<nail x="-110" y="-34"/>
		</transition>
		<transition>
			<source ref="id1"/>
			<target ref="id1"/>
			<label kind="guard" x="-93" y="-178">t &gt; 2</label>
			<label kind="synchronisation" x="-102" y="-161">info[id]!</label>
			<label kind="assignment" x="-93" y="-144">t := 0</label>
			<nail x="-42" y="-127"/>
			<nail x="-110" y="-127"/>
		</transition>
		<transition>
			<source ref="id1"/>
			<target ref="id0"/>
			<label kind="synchronisation" x="-42" y="-25">manoeuvre[id]?</label>
			<nail x="-42" y="-34"/>
		</transition>
	</template>
	<template>
		<name>Sensor</name>
		<parameter>const id_a id</parameter>
		<location id="id2" x="-170" y="-34">
			<name x="-187" y="-8">Retransmission</name>
		</location>
		<location id="id3" x="-357" y="-34">
			<name x="-374" y="-17">Wait</name>
		</location>
		<init ref="id3"/>
		<transition>
			<source ref="id2"/>
			<target ref="id3"/>
			<label kind="synchronisation" x="-306" y="-76">emission[id]!</label>
			<nail x="-204" y="-76"/>
			<nail x="-323" y="-76"/>
		</transition>
		<transition>
			<source ref="id3"/>
			<target ref="id2"/>
			<label kind="synchronisation" x="-297" y="8">info[1-id]?</label>
			<nail x="-323" y="8"/>
			<nail x="-204" y="8"/>
		</transition>
		<transition>
			<source ref="id3"/>
			<target ref="id2"/>
			<label kind="synchronisation" x="-289" y="-34">info[id]?</label>
		</transition>
	</template>
	<template>
		<name>ConflictDetection</name>
		<parameter>const id_a id</parameter>
		<location id="id4" x="-161" y="-144">
			<name x="-170" y="-127">Off</name>
		</location>
		<location id="id5" x="-161" y="-263">
			<name x="-171" y="-297">On</name>
			<urgent/>
		</location>
		<init ref="id4"/>
		<transition>
			<source ref="id5"/>
			<target ref="id4"/>
			<label kind="synchronisation" x="-136" y="-178">danger[id]!</label>
			<nail x="-119" y="-204"/>
		</transition>
		<transition>
			<source ref="id4"/>
			<target ref="id5"/>
			<label kind="synchronisation" x="-272" y="-246">emission[id]?</label>
			<nail x="-204" y="-204"/>
		</transition>
	</template>
	<template>
		<name>ConflictResolution</name>
		<parameter>const id_a id</parameter>
		<declaration>clock c;
clock t;


</declaration>
		<location id="id6" x="51" y="-238">
			<name x="76" y="-263">Calcul</name>
			<label kind="invariant" x="76" y="-246">c &lt;=5 and t &lt;= 30</label>
		</location>
		<location id="id7" x="-153" y="-25">
			<name x="-178" y="-8">Resolu</name>
		</location>
		<location id="id8" x="51" y="-85">
			<name x="8" y="-76">Comparaison</name>
			<urgent/>
		</location>
		<location id="id9" x="298" y="-17">
			<name x="289" y="-8">Wait</name>
			<urgent/>
		</location>
		<location id="id10" x="-153" y="-238">
			<name x="-187" y="-247">Off</name>
		</location>
		<init ref="id10"/>
		<transition>
			<source ref="id10"/>
			<target ref="id6"/>
			<label kind="synchronisation" x="-102" y="-306">infoVoisin[id]?</label>
			<label kind="assignment" x="-93" y="-289">t:=0, c:=0</label>
			<nail x="-136" y="-272"/>
			<nail x="25" y="-272"/>
		</transition>
		<transition>
			<source ref="id7"/>
			<target ref="id10"/>
			<label kind="synchronisation" x="-144" y="-161">solution[id]!</label>
		</transition>
		<transition>
			<source ref="id10"/>
			<target ref="id6"/>
			<label kind="synchronisation" x="-93" y="-238">danger[id]?</label>
			<label kind="assignment" x="-93" y="-221">t:=0, c:=0</label>
		</transition>
		<transition>
			<source ref="id8"/>
			<target ref="id7"/>
			<label kind="select" x="-93" y="-119">x:int[0,10]</label>
			<label kind="guard" x="-76" y="-85">x &lt; 8</label>
			<label kind="synchronisation" x="-93" y="-102">conseil[id]!</label>
		</transition>
		<transition>
			<source ref="id6"/>
			<target ref="id9"/>
			<label kind="synchronisation" x="178" y="-153">solution[id]!</label>
		</transition>
		<transition>
			<source ref="id9"/>
			<target ref="id8"/>
			<label kind="synchronisation" x="119" y="-85">infoVoisin[id]?</label>
		</transition>
		<transition>
			<source ref="id9"/>
			<target ref="id7"/>
			<label kind="guard" x="34" y="-42">t &gt;= 30</label>
			<label kind="synchronisation" x="25" y="-17">conseil[id]!</label>
		</transition>
		<transition>
			<source ref="id8"/>
			<target ref="id6"/>
			<label kind="assignment" x="8" y="-170">c := 0</label>
		</transition>
	</template>
	<template>
		<name>Channel</name>
		<parameter>const id_a id</parameter>
		<declaration>clock t;</declaration>
		<location id="id11" x="-289" y="-34">
			<name x="-332" y="-42">Off</name>
		</location>
		<location id="id12" x="-17" y="-102">
			<name x="-27" y="-136">Communique</name>
		</location>
		<init ref="id11"/>
		<transition>
			<source ref="id12"/>
			<target ref="id11"/>
			<label kind="synchronisation" x="-178" y="0">infoVoisin[1-id]!</label>
			<nail x="-136" y="0"/>
		</transition>
		<transition>
			<source ref="id11"/>
			<target ref="id12"/>
			<label kind="synchronisation" x="-280" y="-178">solution[id]?</label>
			<nail x="-229" y="-153"/>
		</transition>
	</template>
	<template>
		<name>Pilot</name>
		<parameter>const id_a id</parameter>
		<declaration>clock t;</declaration>
		<location id="id13" x="-93" y="34">
			<name x="-127" y="51">Alerted</name>
			<label kind="invariant" x="-102" y="68">t &lt;= 5</label>
		</location>
		<location id="id14" x="-85" y="-93">
			<name x="-145" y="-127">Unbothered</name>
		</location>
		<init ref="id14"/>
		<transition>
			<source ref="id14"/>
			<target ref="id13"/>
			<label kind="synchronisation" x="-8" y="-51">conseil[id]?</label>
			<label kind="assignment" x="-17" y="-25">t := 0</label>
			<nail x="-8" y="-34"/>
		</transition>
		<transition>
			<source ref="id13"/>
			<target ref="id14"/>
			<label kind="synchronisation" x="-272" y="-42">manoeuvre[id]!</label>
			<nail x="-170" y="-34"/>
		</transition>
	</template>
	<system>system Pilot, Aircraft, Sensor, ConflictDetection, Channel, ConflictResolution;
    </system>
	<queries>
		<query>
			<formula>Aircraft(0).Danger --&gt; Aircraft(0).Safe </formula>
			<comment></comment>
		</query>
	</queries>
</nta>
